html, body, #container
	width 100%
	height 100%
	top 0
	left 0
	padding 0
	margin 0
	overflow hidden
	background-color #1A1A1A

#container
	display flex
	justify-content center
	align-items center
	position relative
	width 100%
	height 100%
	&.playing
		cursor none

a
	position absolute
	bottom 1em
	right 1em
	&>img
		width auto
		height 120px
		opacity .13
		transition opacity .3s
	&:hover>img
		opacity .65
